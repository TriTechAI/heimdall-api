syntax = "v1"

// 基础响应结构
type (
	// 通用响应
	BaseResponse {
		Code      int    `json:"code"`
		Message   string `json:"message"`
		Timestamp string `json:"timestamp"`
	}
)

// 临时测试接口，等待实际业务接口替换
type (
	TestRequest {
		Name string `path:"name,options=you|me"`
	}
	TestResponse {
		Message string `json:"message"`
	}
)

@server (
	prefix: /api/v1/public
)
service public-api {
	@doc "测试接口"
	@handler PublicHandler
	get /test/:name (TestRequest) returns (TestResponse)
}

